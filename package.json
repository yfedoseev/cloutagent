{
  "name": "cloutagent",
  "version": "1.0.0",
  "description": "CloutAgent - Visual workflow builder for Claude Agent SDK",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm -F @cloutagent/frontend dev\" \"pnpm -F @cloutagent/backend dev\"",
    "dev:frontend": "pnpm -F @cloutagent/frontend dev",
    "dev:backend": "pnpm -F @cloutagent/backend dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm -F @cloutagent/frontend build",
    "build:backend": "pnpm -F @cloutagent/backend build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}